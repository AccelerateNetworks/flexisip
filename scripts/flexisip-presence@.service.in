[Unit]
Description=Flexisip presence server - %i instance
Documentation=http://www.linphone.org/technical-corner/flexisip/overview
After=syslog.target network.target redis.service mysqld.service

[Service]
Type=forking
PIDFile=/var/run/flexisip/%i.pid
ExecStart=/opt/belledonne-communications/bin/flexisip --server presence --daemon --syslog --pidfile /var/run/flexisip/%i.pid -c /etc/flexisip/%i.conf

[Install]
WantedBy=multi-user.target

