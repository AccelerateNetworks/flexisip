/var/opt/belledonne-communications/log/flexisip/*.log {
	size 100M
	compress
	delaycompress
	nocreate
	missingok
	maxage 7
	postrotate
		for procname in flexisip-{proxy,presence,conference}; do
			pidfile="/var/run/${procname}.pid"
			if [ -f ${pidfile} ]; then
				kill -HUP $(cat ${pidfile})
			fi
		done
	endscript
}

