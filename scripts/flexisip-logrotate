/var/opt/belledonne-communications/log/flexisip/*.log {
	size 100M
	compress
	delaycompress
	nocreate
	missingok
	maxage 7
	nodateext
	postrotate
		logfilename="$(basename $1)"
		pidfile="/var/run/${logfilename%.log}.pid"
		if [ -f "${pidfile}" ]; then
			kill -HUP $(cat ${pidfile})
		fi
	endscript
}
